<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.vip.syreadhd.MainActivity" >

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="fitXY"
        android:src="@drawable/bg" />

    <ImageView
        android:id="@+id/img_rainbow"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentTop="true"
        android:scaleType="fitXY"
        android:src="@drawable/rainbow" />

    <ImageView
        android:id="@+id/img_star"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:scaleType="fitXY"
        android:src="@drawable/star" />

    <ImageView
        android:id="@+id/img_cloud_one"
        android:layout_width="120dp"
        android:layout_height="80dp"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="100dp"
        android:scaleType="fitXY"
        android:src="@drawable/cloud_one" />

    <ImageView
        android:id="@+id/img_cloud_two"
        android:layout_width="120dp"
        android:layout_height="80dp"
        android:layout_marginTop="150dp"
        android:scaleType="fitXY"
        android:src="@drawable/cloud_two" />

    <ImageView
        android:id="@+id/img_cloud_three"
        android:layout_width="120dp"
        android:layout_height="80dp"
        android:layout_alignParentRight="true"
        android:layout_marginRight="30dp"
        android:layout_marginTop="150dp"
        android:scaleType="fitXY"
        android:src="@drawable/cloud_three" />

    <ImageView
        android:id="@+id/img_cloud_four"
        android:layout_width="120dp"
        android:layout_height="80dp"
        android:layout_alignParentRight="true"
        android:layout_marginRight="60dp"
        android:layout_marginTop="180dp"
        android:scaleType="fitXY"
        android:src="@drawable/cloud_four" />

    <ImageView
        android:id="@+id/img_cloud_five"
        android:layout_width="120dp"
        android:layout_height="80dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="30dp"
        android:scaleType="fitXY"
        android:src="@drawable/cloud_five" />

    <ImageView
        android:id="@+id/img_read_btn_back"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_alignLeft="@+id/img_read_btn"
        android:layout_alignTop="@id/img_read_btn"
        android:visibility="invisible"
        android:src="@drawable/btn_back" />

    <ImageView
        android:id="@+id/img_select_btn_back"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_alignLeft="@+id/img_select_btn"
        android:layout_alignTop="@id/img_select_btn"
          android:visibility="invisible"
        android:src="@drawable/btn_back" />

    <ImageView
        android:id="@+id/img_resource_btn_back"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_alignLeft="@+id/img_resource_btn"
        android:layout_alignTop="@id/img_resource_btn"
          android:visibility="invisible"
        android:src="@drawable/btn_back" />

    <ImageView
        android:id="@+id/img_manage_btn_back"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_alignLeft="@+id/img_manage_btn"
        android:layout_alignTop="@id/img_manage_btn"
          android:visibility="invisible"
        android:src="@drawable/btn_back" />

    <ImageView
        android:id="@+id/img_alounce_btn_back"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_alignLeft="@+id/img_alounce_btn"
        android:layout_alignTop="@id/img_alounce_btn"
          android:visibility="invisible"
        android:src="@drawable/btn_back" />

    <ImageView
        android:id="@+id/img_select_btn"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_alignBottom="@id/img_cloud_one"
        android:layout_alignRight="@id/img_cloud_one"
        android:src="@drawable/select" />

    <ImageView
        android:id="@+id/img_resource_btn"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_alignBottom="@id/img_cloud_three"
        android:layout_alignRight="@id/img_cloud_three"
        android:src="@drawable/resource" />

    <ImageView
        android:id="@+id/img_read_btn"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_alignBottom="@id/img_cloud_two"
        android:layout_alignRight="@id/img_cloud_two"
        android:src="@drawable/read" />

    <ImageView
        android:id="@+id/img_manage_btn"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_alignBottom="@id/img_cloud_four"
        android:layout_alignRight="@id/img_cloud_four"
        android:src="@drawable/manage" />

    <ImageView
        android:id="@+id/img_alounce_btn"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_alignBottom="@id/img_cloud_five"
        android:layout_alignRight="@id/img_cloud_five"
        android:src="@drawable/alounce" />

    <TextView
        android:id="@+id/txt_select_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@id/img_select_btn"
        android:layout_below="@id/img_select_btn"
        android:text="馆藏查询" />

    <TextView
        android:id="@+id/txt_read_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@id/img_read_btn"
        android:layout_below="@id/img_read_btn"
        android:text="推荐阅读" />

    <TextView
        android:id="@+id/txt_resource_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@id/img_resource_btn"
        android:layout_below="@id/img_resource_btn"
        android:text="电子资源" />

    <TextView
        android:id="@+id/txt_manage_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@id/img_manage_btn"
        android:layout_below="@id/img_manage_btn"
        android:text="借阅管理" />

    <TextView
        android:id="@+id/txt_alounce_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@id/img_alounce_btn"
        android:layout_below="@id/img_alounce_btn"
        android:text="管理公告" />

</RelativeLayout>